<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f3f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/imgGried"
                android:layout_centerVertical="true"
                android:background="@drawable/corner_gray_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:lines="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="70dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:text="Shirts and Blouses"/>


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/dropdown_icn_arrow"/>


            </RelativeLayout>

            <ImageView
                android:id="@+id/imgList"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/icn_list"
                android:adjustViewBounds="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/imgGried"
                android:layout_toLeftOf="@+id/imgList"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="3dp"
                android:src="@mipmap/icn_greed"
                android:adjustViewBounds="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ONE PIECE"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:scrollbars="vertical" />

    </LinearLayout>

</FrameLayout>
