<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="Fragments.ProfileFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/header_cover_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:background="@color/colorGray">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:background="@mipmap/logobg"
                    android:id="@+id/sellerlogo"
                    />

            </RelativeLayout>





            <LinearLayout
                android:id="@+id/profile_layout"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/header_cover_image"
                android:background="@color/colorWhite"
                android:elevation="4dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingBottom="24dp">


            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/header_cover_image"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:weightSum="1"
                android:layout_margin="5dp"
                >

                <TextView
                    android:id="@+id/user_profile_company"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:layout_centerHorizontal="true"
                    android:text="Company"
                    android:textColor="@color/colorGrayText"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    />

                <TextView
                    android:id="@+id/user_profile_companyName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingRight="10dp"
                    android:gravity="center|right"

                    />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGrayText"/>

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/header_cover_image"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:weightSum="1"
                    android:layout_margin="5dp"
                    >

                    <TextView
                        android:id="@+id/user_profile_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:layout_centerHorizontal="true"
                        android:text="Name"
                        android:textColor="@color/colorGrayText"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"
                        android:gravity="center|left"

                        />

                    <TextView
                        android:id="@+id/user_profile_nameFull"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:layout_centerHorizontal="true"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:paddingRight="10dp"
                        android:gravity="center|right"
                        android:textStyle="bold"
                        />
                </LinearLayout>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGrayText"/>

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/header_cover_image"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:weightSum="1"
                    android:layout_margin="5dp"
                    >

                    <TextView
                        android:id="@+id/user_profile_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:layout_centerHorizontal="true"
                        android:text="Address"
                        android:textColor="@color/colorGrayText"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"
                        android:gravity="center|left"

                        />

                    <TextView
                        android:id="@+id/user_profile_addressFull"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:layout_centerHorizontal="true"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:paddingRight="10dp"
                        android:gravity="center|right"
                        android:textStyle="bold"
                        />
                </LinearLayout>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGrayText"/>

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/header_cover_image"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:weightSum="1"
                    android:layout_margin="5dp"
                    >

                    <TextView
                        android:id="@+id/user_profile_country"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:layout_centerHorizontal="true"
                        android:text="Country"
                        android:textColor="@color/colorGrayText"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"
                        android:gravity="center|left"

                        />

                    <TextView
                        android:id="@+id/user_profile_countryName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:layout_centerHorizontal="true"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:paddingRight="10dp"
                        android:gravity="center|right"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGrayText"/>

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/header_cover_image"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:weightSum="1"
                    android:layout_margin="5dp"
                    >

                    <TextView
                        android:id="@+id/user_profile_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:layout_centerHorizontal="true"
                        android:text="Phone"
                        android:textColor="@color/colorGrayText"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"
                        android:gravity="center|left"

                        />

                    <TextView
                        android:id="@+id/user_profile_phoneNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:layout_centerHorizontal="true"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:paddingRight="10dp"
                        android:gravity="center|right"
                        android:textStyle="bold"
                        />
                </LinearLayout>





                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_layout"

                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhite"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:weightSum="1"
                        android:layout_margin="5dp"
                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            android:layout_weight="0.5"
                            android:weightSum="1"
                            android:layout_margin="5dp"
                            >

                        <TextView
                            android:id="@+id/user_profile_totalSale"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/icnsale"
                            android:textColor="@color/colorGrayText"
                            android:textSize="15sp"
                            android:paddingLeft="10dp"
                            android:gravity="center|left"


                            />

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:layout_below="@+id/header_cover_image"
                            android:background="@color/colorWhite"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:weightSum="1"
                            android:layout_margin="5dp"
                            android:paddingRight="10dp"
                            >

                        <TextView
                            android:id="@+id/user_profile_totalSaleText"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:layout_centerHorizontal="true"
                            android:text="Total Sale"
                            android:textColor="@color/colorGrayText"
                            android:textSize="15sp"
                            android:gravity="center|right"
                            />

                            <TextView
                                android:id="@+id/user_profile_totalSaleValue"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:layout_centerHorizontal="true"
                                android:text="0.0"
                                android:textColor="#2ba8e3"
                                android:textSize="20sp"
                                android:gravity="center|right"

                                />

                            </LinearLayout>
                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            android:layout_weight="0.5"
                            android:weightSum="1"
                            android:layout_margin="5dp"
                            >

                            <TextView
                                android:id="@+id/user_profile_totalEarning"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/icnearning"
                                android:textColor="@color/colorGrayText"
                                android:textSize="15sp"
                                android:paddingLeft="10dp"
                                android:gravity="center|left"


                                />

                            <LinearLayout

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:layout_below="@+id/header_cover_image"
                                android:background="@color/colorWhite"
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                android:weightSum="1"
                                android:layout_margin="5dp"
                                android:paddingRight="10dp"
                                >

                                <TextView
                                    android:id="@+id/user_profile_totalEarningText"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:layout_centerHorizontal="true"
                                    android:text="Total Earning"
                                    android:textColor="@color/colorGrayText"
                                    android:textSize="15sp"
                                    android:gravity="center|right"

                                    />

                                <TextView
                                    android:id="@+id/user_profile_totalEarningValue"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:layout_centerHorizontal="true"
                                    android:text="0.0"
                                    android:textColor="#9E5BA1"
                                    android:textSize="20sp"
                                    android:gravity="center|right"

                                    />

                            </LinearLayout>
                        </LinearLayout>
</LinearLayout>

                    <LinearLayout

                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhite"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:weightSum="1"

                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            android:layout_weight="0.5"
                            android:weightSum="1"
                            android:layout_margin="5dp"
                            >

                            <TextView
                                android:id="@+id/user_profile_totalOrders"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/icnorder"
                                android:textColor="@color/colorGrayText"
                                android:textSize="15sp"
                                android:paddingLeft="10dp"
                                android:gravity="center|left"

                                />

                            <LinearLayout

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:layout_below="@+id/header_cover_image"
                                android:background="@color/colorWhite"
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                android:weightSum="1"
                                android:layout_margin="5dp"
                                android:paddingRight="10dp"
                                >

                                <TextView
                                    android:id="@+id/user_profile_totalOrdersText"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:layout_centerHorizontal="true"
                                    android:text="Total Orders"
                                    android:textColor="@color/colorGrayText"
                                    android:textSize="15sp"
                                    android:gravity="center|right"
                                    />

                                <TextView
                                    android:id="@+id/user_profile_totalOrdersValue"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:layout_centerHorizontal="true"
                                    android:text="0.0"
                                    android:textColor="#95cc6b"
                                    android:textSize="20sp"
                                    android:gravity="center|right"

                                    />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            android:layout_weight="0.5"
                            android:weightSum="1"
                            android:layout_margin="5dp"
                            >

                            <TextView
                                android:id="@+id/user_profile_total"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/icntotal"
                                android:textColor="@color/colorGrayText"
                                android:textSize="15sp"
                                android:paddingLeft="10dp"
                                android:gravity="center|left"


                                />

                            <LinearLayout

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:layout_below="@+id/header_cover_image"
                                android:background="@color/colorWhite"
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                android:weightSum="1"
                                android:layout_margin="5dp"
                                android:paddingRight="10dp"
                                >

                                <TextView
                                    android:id="@+id/user_profile_totalText"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:layout_centerHorizontal="true"
                                    android:text="Total"
                                    android:textColor="@color/colorGrayText"
                                    android:textSize="15sp"
                                    android:gravity="center|right"

                                    />

                                <TextView
                                    android:id="@+id/user_profile_totalValue"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:layout_centerHorizontal="true"
                                    android:text="0.0"
                                    android:textColor="#f0ad4e"
                                    android:textSize="20sp"
                                    android:gravity="center|right"

                                    />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>




        </RelativeLayout>
    </ScrollView>

</FrameLayout>
