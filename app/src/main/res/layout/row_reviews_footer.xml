<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_margin="4dp"
    android:gravity="center_horizontal"
    android:background="@drawable/corner_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:text="WRITE A REVIEW"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@mipmap/star_big"
        android:visibility="gone"
        />

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srb_starSize="30dp"
        app:srb_numberOfStars="5"
        app:srb_rating="3"
        app:srb_stepSize="0.5"
        app:srb_borderColor="@color/colorPrimary"
        app:srb_fillColor="@color/colorGrayText"
        android:id="@+id/ratingggg"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter your Name"
        android:padding="10dp"
        android:background="@drawable/corner_gray_bg"
        android:id="@+id/usernameee"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="4"
        android:gravity="top"
        android:layout_marginTop="10dp"
        android:hint="Enter your review here"
        android:padding="10dp"
        android:background="@drawable/corner_gray_bg"
        android:id="@+id/reviewwww"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/corner_black_bg"
        android:layout_marginTop="10dp"
        android:text="Post your Review"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:id="@+id/reviewittt"
        />

</LinearLayout>